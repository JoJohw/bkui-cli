{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "rootDirs": ["."],
    "typeRoots": ["node_modules/@types", "./index.d.ts"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "declaration": false,
    "baseUrl": "./",
    "removeComments": true,
    "skipLibCheck": true,
    "paths": {
      "typings": ["./index.d.ts"],
      "lib/*": ["./src/lib/*"]
    }
  },
  "exclude": ["dist", "node_modules", "./src/lib/lib-entry.js"],
  "include": ["src/**/*.ts", "src/lib/lib-entry.js"]
}
